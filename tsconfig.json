{
    "compilerOptions": {
        "target": "esnext",
        "allowJs": false,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}